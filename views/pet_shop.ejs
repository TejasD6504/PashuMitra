      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .footer p {
      color: #999;
      font-size: 14px;
      line-height: 1.8;
    }

    .footer strong {
      color: #ff9500;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .header {
        flex-direction: column;
        align-items: flex-start;
      }

      .pet-grid {
        grid-template-columns: 1fr;
      }

      .brand-text h1 {
        font-size: 20px;
      }

      .controls {
        flex-direction: column;
      }

      .search-box {
        width: 100%;
      }
    }
  </style>
</head>
