}

.qr-btn:hover {
  transform: translateY(-5px) scale(1.05);
  box-shadow: 0 15px 40px rgba(255, 149, 0, 0.5);
}

.qr-btn:hover::before {
  left: 100%;
}

.qr-btn:active {
  transform: translateY(-2px) scale(1.02);
}

